<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.javacodegeeks.androidsurfaceviewexample.AndroidSurfaceviewExample" >

    <LinearLayout
        android:id="@+id/buttonMenu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

	    <ImageButton
	        android:id="@+id/button1"
	        android:layout_width="100dp"
	        android:layout_height="100dp"
	        android:contentDescription="Draw Stroke"
	        android:src="@drawable/pencil" />"
	    <ImageButton
	        android:id="@+id/button2"
	        android:layout_width="100dp"
	        android:layout_height="100dp"
	        android:contentDescription="Draw Shape"
	        android:src="@drawable/shapes" />"
	    <TextView 
	        android:id="@+id/recognized1"
	        android:layout_width="100dp"
	        android:layout_height="100dp"
	        android:text="0" />
	    <Button
	        android:layout_width="100dp"
	        android:layout_height="100dp"
	        android:onClick="recognize"/>
    </LinearLayout>
    
    <com.javacodegeeks.androidsurfaceviewexample.StudentAnswerView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>